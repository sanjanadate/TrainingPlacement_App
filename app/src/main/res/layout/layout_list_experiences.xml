<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@color/green">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/green">

            <TextView
                android:id="@+id/company_name_label_list_experiences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/company_name"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/company_title_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/company_name_label_list_experiences"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/roll_no_label_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/company_name_label_list_experiences"
                android:text="@string/roll_no"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/roll_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/company_title_exp"
                android:layout_toEndOf="@id/roll_no_label_exp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/student_name_label_list_experiences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/roll_no_label_exp"
                android:text="@string/student_name"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/student_name_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/roll_no"
                android:layout_toEndOf="@id/company_name_label_list_experiences"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/experience_label_list_experiences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/student_name_label_list_experiences"
                android:text="@string/experience"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_below="@+id/student_name_exp"
                android:layout_toEndOf="@id/experience_label_list_experiences"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>