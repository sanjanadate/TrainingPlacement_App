<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/green">

        <RelativeLayout
            android:id="@+id/container_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/green">

            <TextView
                android:id="@+id/company_name_label_list_companies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto"
                android:text="@string/company_name"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/company_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/company_name_label_list_companies"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/min_cgpa_label_list_companies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_name_label_list_companies"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto"
                android:text="@string/min_cgpa"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/min_cgpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_title"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/min_cgpa_label_list_companies"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/max_backlog_label_list_companies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/min_cgpa_label_list_companies"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto"
                android:text="@string/max_backlogs"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/max_backlog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/min_cgpa"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/max_backlog_label_list_companies"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/stream_label_list_companies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/max_backlog_label_list_companies"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto"
                android:text="@string/streams"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/stream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/max_backlog"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/stream_label_list_companies"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/job_description_label_list_companies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stream_label_list_companies"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto"
                android:text="@string/job_description"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/job_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stream"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/job_description_label_list_companies"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/location_label_list_companies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/job_description_label_list_companies"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto"
                android:text="@string/location"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/job_description"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/location_label_list_companies"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/stipend_label_list_companies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_label_list_companies"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto"
                android:text="@string/stipend"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/stipend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/stipend_label_list_companies"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>